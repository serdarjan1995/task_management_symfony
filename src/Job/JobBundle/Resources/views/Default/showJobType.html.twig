{% extends '::template.html.twig' %}

{% block title %}Show Job Types{% endblock %}
{% block pagename %} Job Types {% endblock %}
{% block content %}
    <div class="main-content">
        <div class="widget">
            <h3 class="section-title first-title"><i class="icon-table"></i> Jobs:</h3>
            <div class="widget-content-white glossed">
                <div class="padded">
                    <table class="table table-striped table-bordered table-hover">
                        <thead>
                        <tr>
                            <th>id</th>
                            <th>job_type</th>
                            <th class="text-right">
                                <a href="{{ path('job_type_new') }}" class="btn btn-success btn-xs">
                                    <i class="icon-plus"></i> add</a>
                            </th>
                        </tr>
                        </thead>
                        <tbody>
                        {%  for jobtype in jobtypes %}
                            <tr>
                                <td>{{ jobtype.id }}</td>
                                <td>
                                    {{ jobtype.jobType }}
                                </td>
                                <td class="text-right">
                                    <a href="{{ path('job_type_edit',{'jobtype' : jobtype.id}) }}" class="btn btn-default btn-xs">
                                        <i class="icon-pencil"></i> edit</a>
                                    <a href="{{ path('job_type_delete',{'jobtype' : jobtype.id}) }}" class="btn btn-danger btn-xs">
                                        <i class="icon-remove"></i>
                                    </a>
                                </td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

{% endblock %}

