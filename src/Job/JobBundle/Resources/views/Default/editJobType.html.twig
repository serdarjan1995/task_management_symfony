{% extends '::template.html.twig' %}

{% block title %}Edit Job{% endblock %}
{% block pagename %} Edit Job Form{% endblock %}
{% block content %}
    <div class="main-content">
        <div class="row">
            <div class="col-md-6">
                <div class="widget">
                    <div class="widget-content-white glossed">
                        <div class="padded">
                            <form action="{{ path('job_type_update',{'jobtype' : jobtype.id}) }}" method="post" role="form">
                                <h3 class="form-title form-title-first"><i class="icon-terminal"></i> Update Job Type #{{ jobtype.id }}</h3>
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label>Job Type</label>
                                            <input type="text" name="jobtype" value="{{ jobtype.jobType }}">
                                        </div>
                                    </div>
                                </div>

                                <input type="submit" class="btn btn-primary" value="Update">

                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>


{% endblock %}